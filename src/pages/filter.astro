---
import Layout from "../layouts/GeneralLayout.astro";
---

<Layout title="Filter">
  <div class="w-full h-full fixed inset-0 -z-10 opacity-30">
    <img src="/glowiess.svg" class="absolute inset-0 -left-72 -z-10" />
  </div>

  <div class="w-full h-full fixed -z-10 opacity-60">
    <img src="/glowiess.svg" class="absolute inset-0 left-[80vw] -z-10" />
  </div>
  <div
    class="mt-20 box rounded-xl border p-6 w-full md:max-w-sm shadow-2xl shadow-yellow-500/20 border-slate-800"
  >
    <div
      class="flex items-center justify-between w-full pb-3 border-b border-gray-200 mb-1"
    >
      <p
        class="font-medium text-base leading-7 text-brand-primary"
      >
        Filter Plans
      </p>
      <p
        class="font-medium text-xs text-brand-surface cursor-pointer transition-all duration-500 hover:text-indigo-600"
      >
        RESET
      </p>
    </div>

    <div class="w-full mb-7">
      <div
        class="accordion-group grid grid-cols-1 gap-5 sm:gap-9"
        data-accordion="default-accordion"
      >
        <div class="accordion" id="category-heading-one">
          <div
            id="category-collapse-one"
            class="accordion-content w-full px-0 overflow-hidden pr-4 max-h-0"
            aria-labelledby="category-heading-one"
          >
          </div>
        </div>
      </div>
    </div>
    <div>
      <p
        class="font-medium text-2xl leading-6 text-brand-surface mb-3 duration-500 hover:text-orange-400"
      >
        Trending

        <p class="font-medium text-sm leading-6 text-brand-surface mb-3">
          Best-Sellers
        </p>
        <p class="font-medium text-sm leading-6 text-brand-surface mb-3">
          New Realses
        </p>
        <p class="font-medium text-sm leading-6 text-brand-surface mb-3">
          Rising games
        </p>
      </p>
      <div class="box flex flex-col gap-2"></div>

      <p
        class="font-medium text-2xl leading-6 text-brand-surface mb-3 duration-500 hover:text-orange-400"
      >
        Genre

        <p class="font-medium text-sm leading-6 text-brand-surface mb-3">
          Adventure:
        </p>
        <p class="font-medium text-sm leading-6 text-brand-surface mb-3">
          Platformer:
        </p>
        <p class="font-medium text-sm leading-6 text-brand-surface mb-3">
          Puzzle:
        </p>
        <p class="font-medium text-sm leading-6 text-brand-surface mb-3">
          Strategy:
        </p>
      </p>
      <div class="box flex flex-col gap-2"></div>
    </div>
  </div>
</Layout>
