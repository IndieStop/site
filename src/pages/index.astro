	<div class="w-full h-full fixed -z-10 opacity-60">
		<img src="/glowiess.svg" class="absolute inset-0 left-[80vw] -z-10" />
	</div>

	<nav
		class="flex flex-row justify-between items-center m-auto p-10 animate-fade-down animate-once"
	>
		<a href="/" class="font-bold text-4xl tracking-wide float-left">
			<span class="text-indiegames">Indie</span><span
				class="text-brand-primary">Stop</span
			>
		</a>

		<div class="flex gap-6">
			<svg
				xmlns="http://www.w3.org/2000/svg"
