	<section class="min-h-screen p-10 space-y-14">
		<h1
			class="font-bold text-2xl animate-fade-right animate-once animate-delay-200 pb-10"
		>
			Our Best Selection
		</h1>
		<SLideShow client:load />

		<h1 class="font-bold text-2xl">Rising Games</h1>
		<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-5">
			{
				Game.map((key) => (
					<div id={key.uuid}>
						<img
							src={key.Thumbnail}
							class="object-cover w-full max-w-92 h-72 rounded-2xl animate-fade-right animate-once"
						/>
						<p>{key.Description}</p>
					</div>
				))
			}
		</div>
		<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-5">
			{
				rising.map((key) => (
					<div class="space-y-2">
						<img
							src={key}
							class="object-cover w-full max-w-92 h-72 rounded-2xl animate-fade-right animate-once"
						/>
						<h3 class="font-medium text-md">Indie Game</h3>
						<p class="text-brand-primary font-bold">$1000</p>
					</div>
				))
			}
		</div>
		<h1 class="font-bold text-2xl">Discounted Games</h1>
		<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-5">
			{
				discount.map((key) => (
					<div class="space-y-2">
						<img
							src={key}
							class="object-cover w-full max-w-92 h-72 rounded-2xl animate-fade-right animate-once"
						/>
						<h3 class="font-medium text-md">Indie Game</h3>
						<p class="text-brand-primary font-bold">$1000</p>
					</div>
				))
			}
		</div>
		<h1 class="font-bold text-2xl">Recently Updated Games</h1>
		<div
			class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-5 w-full"
		>
			{
				recent.map((key) => (
					<div class="space-y-2">
